---
interface Props {
	title: string;
}

const { title } = Astro.props;

import "@fontsource-variable/onest"
import  SpeedInsights  from "@vercel/speed-insights/astro"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Speech to Text and Translation" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/microphone.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="google-site-verification" content="k7s1F6iPwDvN7e4iUuhb5voJK_QD8F6taLTegRWKYSs" />
		<title>{title}</title>
	</head>
	<body>
		
		<slot />
		<SpeedInsights />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: 'Onest Variable', sans-serif;
		background: #212529;
		background-size: 224px;
	}
	code {
		font-family:
		'Onest Variable', sans-serif;
	}
</style>
